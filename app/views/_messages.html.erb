<%flash.each do |name, msg|%>
  <%= content_tag :div, msg, :class=> "alert alert-danger"%>
  <% if defined? model%>   
    <% if model.errors.any?%>
      <% model.errors.full_messages.each do |msg|%>
        <%= content_tag :div, msg, :class=> "alert alert-danger"%>
      <%end%>
    <%end%>
  <%end%>
<%end%>